{% extends 'base.html.twig' %}

{% block title %}Hello BdController!{% endblock %}

{% block body %}

<div class="">
    <h1>Liste des auteurs</h1>
    <ul class="list-group list-group-flush"></ul>
    {% for auteur in auteurs %}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <a class="text-decoration-none" href="{{ path('bd_show', {id :auteur.id}) }}">{{ auteur.auteur }}</a> 
      <span class="badge rounded-pill bg-primary">{{ auteur.nblivres }}</span> 
    </li>
    {% endfor %}
    </ul>

    <div class="offset-3">
        {{ knp_pagination_render(auteurs) }}
    </div>
{% endblock %}
